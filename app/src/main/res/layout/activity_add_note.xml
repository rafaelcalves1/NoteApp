<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:fitsSystemWindows="true"
    android:padding="10dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_note_recycler_colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        tools:layout_editor_absoluteX="10dp">

        <View
            android:id="@+id/add_note_color_orange"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/background_view_border_orange"
            app:layout_constraintEnd_toStartOf="@+id/add_note_color_yellow"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/add_note_color_yellow"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/background_view_border_yellow"
            app:layout_constraintEnd_toStartOf="@+id/add_note_color_violet"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/add_note_color_orange"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/add_note_color_violet"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/background_view_border_violet"
            app:layout_constraintEnd_toStartOf="@+id/add_note_color_blue"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/add_note_color_yellow"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/add_note_color_blue"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/background_view_border_blue"
            app:layout_constraintEnd_toStartOf="@+id/add_note_color_pink"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/add_note_color_violet"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/add_note_color_pink"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/background_view_border_pink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/add_note_color_blue"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_note_input_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/transparent"
        android:hint="@string/txt_info_title"
        android:padding="8dp"
        android:textColor="@color/dark_gray"
        android:textColorHint="@color/dark_gray"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/add_note_recycler_colors" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_note_input_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent"
        android:gravity="top"
        android:hint="@string/txt_info_body"
        android:padding="8dp"
        android:textColor="@color/dark_gray"
        android:textColorHint="@color/dark_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/guideline3"
        app:layout_constraintTop_toBottomOf="@id/add_note_input_title" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_note_save_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_save"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@id/guideline3"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.92" />


</androidx.constraintlayout.widget.ConstraintLayout>